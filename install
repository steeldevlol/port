apt install sudo openssh-client -y && sudo apt-get install -y openssh-server && sudo systemctl enable --now ssh && sudo sed -i 's/^#PermitRootLogin.*/PermitRootLogin yes/' /etc/ssh/sshd_config && sudo sed -i 's/^#PasswordAuthentication.*/PasswordAuthentication yes/' /etc/ssh/sshd_config && sudo systemctl restart ssh && ip=$(hostname -I | awk '{print $1}') || ip=$(ip a | grep -w 'inet' | grep -v '127.0.0.1' | awk '{print $2}' | cut -d'/' -f1) && port=$(sudo grep -i port /etc/ssh/sshd_config | grep -v ^# | awk '{print $2}') && clear && apt update && apt install git -y && tmpdir="/tmp/port_$(tr -dc A-Za-z0-9 </dev/urandom | head -c 10)" && git clone https://github.com/steeldevlol/port "$tmpdir" && chmod +x "$tmpdir/port" && mv "$tmpdir/port" /bin/port && clear && rm -rf "$tmpdir" && echo 'âœ… port installed successfully, type "port help" to use it.'
